<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_local"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aiton.zjb.signal.activity.LocalActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Title_Hight"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/aiton_basic_color">

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="本地控制"
            android:textSize="@dimen/titleTextSize"/>

        <TextView
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:textSize="@dimen/normal_textsize"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手动添加"
            android:id="@+id/textViewAddIP"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:orientation="vertical"
        android:layout_below="@+id/relativeLayout">


        <GridView
            android:id="@+id/gv_tsc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:background="@color/white"
            android:numColumns="3"/>


        <Button
            android:id="@+id/button_broadcast"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@drawable/btn_guanli_selector"
            android:text="广播"
            android:textColor="#ffffff"
            android:textSize="@dimen/btn_textSize"/>
    </LinearLayout>

</RelativeLayout>
